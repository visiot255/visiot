    function buildQuiz (questions, submitButton) {
    function showQuestions(questions ){
        var output=[];
        var answer=[] ;
        for (var i=0; i<(questions.length); i++){
            answer.push([]);
            for (letter in questions[i].answers){
                answer[i].push(
                    ' <label> </br> <input type="radio" name="question'+i+'"value="'+letter+'" >'
                        +letter+ ': '
                        +questions[i].answers[letter]
                    +' </label> '
                );};
            output.push('<div class="question"> </br><strong>'+questions[i].question+'</strong></div>'+'<div class="answers">'+answer[i].join('')+'</div>');
        };
        document.getElementById('quizjs').innerHTML=output.join('');


    function showResults(questions){
        var userAnswer='';
        var numCorrect=0;
        var results=[];
        output=[];
        resultOutput=[];
        for(var i=0; i<questions.length; i++){
            results.push([]);
            resultOutput.push('<div class="question"> </br> <strong>'+questions[i].question+'</strong></div>'+'<div class="answers">')
            var answerContainers = document.getElementById('quizjs').querySelectorAll('.answers');
            userAnswer=( answerContainers[i].querySelector('input[name=question'+i+']:checked')||{} ).value;
            if (userAnswer===questions[i].correctAnswer){
                numCorrect++;
                for (letter in questions[i].answers){
                    if (letter===questions[i].correctAnswer){
                        results[i].push(
                        ' <p class="correct"> '
                        +letter+ ': '
                        +questions[i].answers[letter]
                        +' </p>')
                    }
                    else{
                        results[i].push(
                        '<p class="correct2">'+letter+ ': '+questions[i].answers[letter]+' </p> ')
                    };
                };
            }
            else{
                for (letter in questions[i].answers){
                    if (letter===questions[i].correctAnswer){
                        results[i].push(
                        ' <p class="correct"> '
                        +letter+ ': '
                        +questions[i].answers[letter]
                        +' </p>')
                    }
                    else{
                        results[i].push(
                        ' <p class="false">'+letter+ ': '+questions[i].answers[letter]+' </p> ')
                    };
                }
            }
            resultOutput.push(results[i].join(''));
            resultOutput.push('</div>'+'<div class="explication"> </br><strong> Réponse :</strong></br>'+ questions[i].explanation+'</div>') ;
        }
        document.getElementById('resultsjs').innerHTML=resultOutput.join('')+'</br><div style="text-align:center;font-family:Nunito"><strong>'+numCorrect+' sur '+questions.length+'</strong></div></br>';
        document.getElementById('quizjs').innerHTML=output;
    }
    submitButton.onclick=function(){
        showResults(questions);
        document.getElementById('submitjs').innerHTML="<a href=<%= config.urlAccueil %> >Retour à la page d'accueil</a>";
    }
    }
    showQuestions(questions);
    };

    //display quiz
    buildQuiz(myQuestions,submitButton);

</script>

